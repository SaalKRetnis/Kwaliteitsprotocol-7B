@page "/scenario/2"
@attribute [Authorize]
@inject AudioService Audio
@inject NavigationManager Navigation
@inject ScenarioService Scenario
@inject IJSRuntime JS

<div class="scenario">
    <img src="img/sc2_normal.png" alt="" />
    <img class="glitch-img @ImageClass @TearClass" src="img/sc2_glitch.png" alt="" />

    <section class="contents card">
        <header>
            <h1>Kwaliteitsprotocol 7B</h1>
            <h3>Scenario 2 – Nachtinspectie</h3>
            <h5>Nachtploeg – 02:41</h5>
        </header>

        <article class="instructions">
            <p>Tijdens de ronde registreert de niveausensor een korte afwijking in Silo 3.</p>
            <p>Er is geen personeel aanwezig en er zijn geen geplande werkzaamheden.</p>
            <p>Er worden geen aanvullende alarmen of drukveranderingen gemeld.</p>
            <p>Noteer de gebeurtenis en vervolg de ronde volgens procedure.</p>
        </article>

        @if (CurrentPhase >= ScenarioPhase.Question)
        {
            <section class="question">
                <p class="question-text">@((MarkupString)Question.Text)</p>

                <div class="answers">
                    @foreach (var answer in Question.Answers)
                    {
                        <button class="answer" @onclick="() => ProvideAnswer(answer)" @key="answer">
                            @((MarkupString)answer.Text)
                        </button>
                    }
                </div>

                @if (CurrentAnswer is { IsCorrect: false })
                {
                    <p class="invalid">Onjuist volgens Kwaliteitsprotocol 7B. Let op: afwijkende keuzes worden gelogd.</p>
                }
                else if (CurrentAnswer is { IsCorrect: true })
                {
                    <p class="valid">Correct volgens Kwaliteitsprotocol 7B.</p>
                }

                @if (CurrentPhase == ScenarioPhase.Results && CurrentAnswer is { IsCorrect: true })
                {
                    <div class="result-overlay">
                        <p class="result-number">@Question.ResultValue</p>
                    </div>
                }
            </section>
        }
        else
        {
            <button class="audio" @onclick="Play">Tik om door te gaan</button>
        }
    </section>
</div>

@code {
    public Answer? CurrentAnswer { get; private set; }
    public ScenarioPhase CurrentPhase { get; private set; } = ScenarioPhase.Idle;
    public string? ImageClass => CurrentPhase is ScenarioPhase.Glitch ? "active" : null;
    public string? TearClass { get; private set; }
    public Question Question { get; } = new("Wat is de juiste procedure bij onverwachte sensoractiviteit tijdens een nachtronde?",
    [
        new("<strong>A.</strong> Direct melden bij de ploegleider"),
        new("<strong>B.</strong> Loggen als \"drukschommeling\"", IsCorrect: true),
        new("<strong>C.</strong> Silo 3 fysiek controleren"),
        new("<strong>D.</strong> Sensor resetten en doorgaan"),
    ], ResultValue: 1);

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await Audio.PlayOnce("sc2-ex-speech");
        }
    }

    public async Task Play()
    {
        CurrentPhase = ScenarioPhase.Question;
        StateHasChanged();

        await Task.Delay(2500);
        await Glitch();

        CurrentPhase = ScenarioPhase.Question;
        StateHasChanged();
    }

    public async Task ProvideAnswer(Answer answer)
    {
        CurrentAnswer = answer;
        if (answer.IsCorrect)
        {
            CurrentPhase = ScenarioPhase.Results;
            _ = Audio.Play("answer-correct", volume: .5);

            await Task.Delay(1000);
            CurrentPhase = ScenarioPhase.Completed;
            StateHasChanged();

            await Task.Delay(1000);
            await Scenario.MarkScenario(2, completed: true);
            await JS.InvokeVoidAsync("history.back");
        }
        else
        {
            await Audio.Play("answer-incorrect", volume: .5);
        }
    }

    async Task Glitch()
    {
        CurrentPhase = ScenarioPhase.Glitch;
        StateHasChanged();

        _ = Audio.Play("glitch");
        await Task.Delay(100);

        _ = Audio.Speak("sc2-speech", "Afwijking komt overeen met eerdere patronen. Classificatie blijft niet‑kritiek.", duration: 5000);
        for (var i = 0; i < 6; i++)
        {
            TearClass = $"tear-{Random.Shared.Next(1, 6)}";
            StateHasChanged();
            await Task.Delay(Random.Shared.Next(30, 80));

            TearClass = null;
            StateHasChanged();
            await Task.Delay(Random.Shared.Next(20, 60));
        }
    }
}
