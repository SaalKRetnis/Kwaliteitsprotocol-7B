@page "/scenario/2"
@attribute [Authorize]
@inject AudioService Audio
@inject NavigationManager Navigation
@inject ScenarioService Scenario
@inject IJSRuntime JS

<div class="scenario">
    <img src="@ImagePath" alt="Nachtinspectie achtergrond" />

    <section class="contents">
        <header>
            <h1>Kwaliteitsprotocol 7B</h1>
            <h3>Scenario 2 – Nachtinspectie</h3>
            <h5>Nachtploeg – 02:41</h5>
        </header>

        <article class="instructions">
            <p>Tijdens de ronde registreert de niveausensor onverwachte beweging in Silo 3.</p>
            <p>Geen personeel aanwezig.</p>
            <p>Geen geplande activiteiten.</p>
            <p>Log de gebeurtenis volgens procedure.</p>
        </article>

        <button class="audio" @onclick="Play">▶ Speel audio</button>

        @if (CurrentPhase >= ScenarioPhase.Question)
        {
            <section class="question">
                <p class="question-text">@((MarkupString)Question.Text)</p>

                <div class="answers">
                    @foreach (var answer in Question.Answers)
                    {
                        <button class="answer" @onclick="() => ProvideAnswer(answer)" @key="answer">
                            @((MarkupString)answer.Text)
                        </button>
                    }
                </div>

                <p class="invalid @InvalidNoticeClass">
                    Onjuist volgens Kwaliteitsprotocol 7B. Let op: afwijkende keuzes worden gelogd.
                </p>

                <p class="valid @ValidNoticeClass">
                    Correct volgens Kwaliteitsprotocol 7B.
                </p>

                @if (CurrentPhase == ScenarioPhase.Results && CurrentAnswer is { IsCorrect: true })
                {
                    <p class="result">@Question.ResultValue</p>
                }
            </section>
        }
    </section>
</div>

@code {
    public Answer? CurrentAnswer { get; private set; }
    public ScenarioPhase CurrentPhase { get; private set; } = ScenarioPhase.Idle;
    public string ImagePath => CurrentPhase switch
    {
        ScenarioPhase.Glitch => "img/sc2_glitch.png",
        _ => "img/sc2_normal.png"
    };
    public string? InvalidNoticeClass => CurrentAnswer?.IsCorrect is false ? "active" : null;
    public Question Question { get; } = new("Wat is de juiste procedure bij onverwachte sensoractiviteit tijdens een nachtronde?",
    [
        new("<strong>A.</strong> Direct melden bij de ploegleider"),
        new("<strong>B.</strong> Loggen als \"drukschommeling\"", IsCorrect: true),
        new("<strong>C.</strong> Silo 3 fysiek controleren"),
        new("<strong>D.</strong> Sensor resetten en doorgaan"),
    ], ResultValue: 1);
    public string? ValidNoticeClass => CurrentAnswer?.IsCorrect is true ? "active" : null;

    public async Task Play()
    {
        await Audio.Speak("sc2-speech", "Waarschijnlijk een drukschommeling. Geen actie vereist. Ga verder met de ronde.", duration: 5000);
        CurrentPhase = ScenarioPhase.Glitch;
        StateHasChanged();

        await Task.Delay(500);
        CurrentPhase = ScenarioPhase.Question;
        StateHasChanged();
    }

    public async Task ProvideAnswer(Answer answer)
    {
        CurrentAnswer = answer;
        if (answer.IsCorrect)
        {
            CurrentPhase = ScenarioPhase.Results;

            await Task.Delay(1000);
            CurrentPhase = ScenarioPhase.Completed;
            StateHasChanged();

            await Task.Delay(1000);
            await Scenario.MarkScenario(2, completed: true);
            await JS.InvokeVoidAsync("history.back");
        }
    }
}
