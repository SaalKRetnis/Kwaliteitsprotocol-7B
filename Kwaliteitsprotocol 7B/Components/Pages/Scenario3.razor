@page "/scenario/3"
@attribute [Authorize]
@inject AudioService Audio
@inject NavigationManager Navigation
@inject ScenarioService Scenario
@inject IJSRuntime JS

<div class="scenario">
    <img src="@ImagePath" alt="Incidentrapportage achtergrond" />

    <section class="contents card">
        <header>
            <h1>Kwaliteitsprotocol 7B</h1>
            <h3>Scenario 3 – Incidentrapportage</h3>
            <h5>Rapportselectie</h5>
        </header>

        <article class="instructions">
            <p>Kies het rapport dat het best voldoet aan de richtlijnen van Kwaliteitsprotocol 7B.</p>
            <p>Let op volledigheid, consistentie en correcte classificatie.</p>
            <p>Sommige rapporten kunnen onvolledig of beperkt zichtbaar zijn.</p>
        </article>

        @if (CurrentPhase >= ScenarioPhase.Question)
        {
            <section class="question">
                <p class="question-text">@((MarkupString)Question.Text)</p>

                <div class="answers">
                    @foreach (var answer in Question.Answers)
                    {
                        <button class="answer"
                                @onclick="() => ProvideAnswer(answer)"
                                @key="answer">
                            @((MarkupString)answer.Text)
                        </button>
                    }
                </div>

                @if (CurrentAnswer is { IsCorrect: false })
                {
                    <p class="invalid">Onjuist volgens Kwaliteitsprotocol 7B. Let op: afwijkende keuzes worden gelogd.</p>
                }
                else if (CurrentAnswer is { IsCorrect: true })
                {
                    <p class="valid">Correct volgens Kwaliteitsprotocol 7B.</p>
                }

                @if (CurrentPhase == ScenarioPhase.Results && CurrentAnswer is { IsCorrect: true })
                {
                    <div class="result-overlay">
                        <p class="result-number">@Question.ResultValue</p>
                    </div>
                }
            </section>
        }
        else
        {
            <button class="audio" @onclick="Play">Tik om door te gaan</button>
        }
    </section>
</div>

@code {
    public Answer? CurrentAnswer { get; private set; }
    public ScenarioPhase CurrentPhase { get; private set; } = ScenarioPhase.Idle;
    public string ImagePath => CurrentPhase switch
    {
        ScenarioPhase.Glitch => "img/sc3_glitch.png",
        _ => "img/sc3_normal.png"
    };
    public Question Question { get; } = new("Welk rapport voldoet het best aan de richtlijnen van Kwaliteitsprotocol 7B?",
    [
        new("<strong>A.</strong> Rapport A"),
        new("<strong>B.</strong> Rapport B", IsCorrect: true),
        new("<strong>C.</strong> Rapport C"),
        new("<strong>D.</strong> Geen van bovenstaande"),
    ], ResultValue: 2);

    public async Task Play()
    {
        CurrentPhase = ScenarioPhase.Question;
        StateHasChanged();

        await Task.Delay(1000);
        CurrentPhase = ScenarioPhase.Glitch;
        StateHasChanged();

        _ = Audio.Speak("sc3-speech", "Selecteer het rapport dat correct is ingevuld volgens protocol.", duration: 4000);
        await Task.Delay(250);

        CurrentPhase = ScenarioPhase.Question;
        StateHasChanged();
    }

    public async Task ProvideAnswer(Answer answer)
    {
        CurrentAnswer = answer;
        if (answer.IsCorrect)
        {
            CurrentPhase = ScenarioPhase.Results;

            await Task.Delay(1000);
            CurrentPhase = ScenarioPhase.Completed;
            StateHasChanged();

            await Task.Delay(1000);
            await Scenario.MarkScenario(3, completed: true);
            await JS.InvokeVoidAsync("history.back");
        }
    }
}
