@page "/"
@attribute [Authorize]
@inject AudioService Audio
@inject AppAuthenticationStateProvider Authentication
@inject NavigationManager Navigation
@inject ScenarioService Scenario

<div class="home">
    <section class="home-box card">
        <h1>Kwaliteitsprotocol 7B</h1>
        <h3>Interne trainingsmodule – De Sinterkaasfabriek</h3>

        <p>Deze module bevat vier scenario’s voor kwaliteitsbewaking.</p>
        <p>Voer de stappen uit zoals voorgeschreven.</p>

        <div class="home-buttons">
            <button class="primary" @onclick="StartTraining">Start training</button>
            <button class="secondary" @onclick="LogOff">Uitloggen</button>
        </div>

        <p class="footer-note">Alleen voor intern gebruik. Onbevoegde toegang verboden.</p>
    </section>

    @if (ShowVolumeOverlay)
    {
        <VolumeCheckOverlay OnResult="OnVolumeCheckResult" />
    }
</div>

@code {
    public bool ShowVolumeOverlay { get; private set; } = false;

    protected override async Task OnInitializedAsync()
    {
        var states = await Scenario.GetScenarioCompletionStates();
        if (states.All(e => e.Value))
        {
            Navigation.NavigateTo("/end", replace: true);
        }
    }

    public async Task LogOff()
    {
        await Authentication.UpdateAuthenticationState(userSession: null);
        SecureStorage.Default.RemoveAll();

        Navigation.NavigateTo("/", replace: true);
    }

    public async Task StartTraining()
    {
        if (await SecureStorage.GetAsync("app_checked_volume") is { Length: > 0 })
        {
            Navigation.NavigateTo("/scenarios");
            return;
        }

        ShowVolumeOverlay = true;
        await SecureStorage.SetAsync("app_checked_volume", "true");
    }

    void OnVolumeCheckResult(bool ok)
    {
        ShowVolumeOverlay = false;
        if (ok)
        {
            Navigation.NavigateTo("/scenarios");
        }
    }
}
